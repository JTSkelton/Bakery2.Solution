
@{
  Layout = "_Layout";
}

@using Bakery.Models;
&nbsp;
<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 

    @foreach(Flavor flavor in Model)
    {
      <h3>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</h3>
    }
 

<br />

<button type="button" class="btn btn-outline-success">@Html.ActionLink("Add new flavor", "Create")</button>
<button type="button" class="btn btn-outline-warning">@Html.ActionLink("Home", "Index", "Home")</button>
