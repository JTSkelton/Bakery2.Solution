@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor;
&nbsp;
<h2>Flavor Details</h2>
<hr />
<h5>@Html.DisplayNameFor(model => model.FlavorName):</h5><h3><strong> @Html.DisplayFor(model => model.FlavorName)</strong></h3>
<br />
@if(@Model.TreatFlavorEntities.Count == 0)
{
  <p>This flavor does not have any Treats. </p>
}
else
{
  <h5>Treats with this Flavor:</h5>
  @foreach(var join in Model.TreatFlavorEntities)
  {
    <h4>@join.Treat.TreatName</h4>
  }
}
<br />
<button type="button" class="btn btn-outline-success">@Html.ActionLink("Back to flavor", "Index")</button>

@if (User.Identity.IsAuthenticated)
{
  <button type="button" class="btn btn-outline-success">@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</button>
  <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</button>
}
