@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h2>Add New Flavor</h2>

<table class ="table table-borderd table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Treat
            </th>
            <th>
                Flavor
            </th>
        </tr>
    </thead>
    <tbody>
            <tr class="table table-hover table-dark">
                <td width 10%>
                    <h4>@Html.DisplayFor(model => model.TreatId)</h4>
                </td>
                <td width 50%>
                    <h4>@Html.DisplayFor(model => model.TreatName)</h4>
                </td>
                <td width 50%>
                      @Html.DropDownList("FlavorId")<br>
                <td>
                  <input type="submit" value="Submit" class = "btn btn-outline-success" />
                </td>
            </tr>
    </tbody>
  </table>

@Html.ActionLink("Back to Books", "Index", new { id = Model.TreatId }, new { @class = "btn btn-outline-info" })