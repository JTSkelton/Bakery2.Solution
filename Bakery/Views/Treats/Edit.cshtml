@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h2>Edit</h2>

<h4>Edit this Treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.TreatName)
  @Html.EditorFor(model => model.TreatName)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId") 

  <input type="submit" value="Save" class = "btn btn-outline-success" />
}<br>
@Html.ActionLink("Add New Treat", "Create", new { id = 0 }, new { @class = "btn btn-outline-success" })